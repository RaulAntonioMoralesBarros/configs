"----------------------"
"Configuracion estandar" 
"----------------------"

set number
set mouse=a
set numberwidth=1
set clipboard=unnamed
syntax enable
set showcmd
set ruler
set cursorline
set showmatch 
set sw=2
set relativenumber
set noshowmode 
set noerrorbells 
set timeoutlen=10000
so ~/.vim/plugins.vim
so ~/.vim/plugin-config.vim
so ~/.vim/maps.vim

colorscheme gruvbox
let g:gruvbox_contrast_dark= 'hard'
set bg=dark

"assddsadasd"
